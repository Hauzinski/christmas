{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "esModuleInterop" : true,
    "sourceMap": true,
    "module": "es6",
    "target": "es2020",    
    "allowJs": true
  },
  "exclude": ["node_modules"]
}